<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            <div id="error_explanation">
                <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
              
                <ul>
                  <% category.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
  <% end %>
  
  <div class="row my-2">
    <div class="col-lg-4">
      <%= form.label :category_title, class: "form-label"%>
      <%= form.text_field :category_title, class: "form-control"%>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-lg-4">
      <%= form.label :category_details, class: "form-label"%>
      <%= form.text_area :category_details, class: "form-control"%>
    </div>
  </div>
  <div class="field">
    <%= form.number_field :user_id, id: :category_user_id, value: current_user.id, type: :hidden %>
  </div>
  <div class="field">
      <%= form.submit class: 'btn btn-success'%>
  </div>

<% end %>


