
<h1>Categories</h1>
<%= link_to 'New Category', new_category_path, class: "btn btn-outline-primary float-end mb-2" %>
<div class="table-box">  
  <table class="table table-striped table-hover">
    <thead >
      <tr class="text-center">
        <th scope="col">Title</th>
        <th scope="col">Details</th>
        <th scope="col" class="col-4">Actions</th>
      </tr>
    </thead>

    <tbody class="table-group-divider">
        <% @categories.each do |category| %>
          <% if category.user == current_user%>
            <tr>
              <td><%= category.category_title %></td>
              <td><%= category.category_details %></td>
              <td  class="align-center">
                <%= link_to ' Show', category, class: "btn btn-info bi-eye-fill space" %>
                <%= link_to ' Edit', edit_category_path(category), class: "btn btn-success bi-pencil-fill space" %>
                <%= link_to ' Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger bi-trash-fill space" %>
              </td>
            </tr>
          <%end%>
        <%end%>
    </tbody>
  </table>
</div>

