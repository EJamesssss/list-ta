<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path, class: "btn btn-outline-primary float-end mb-2" %>

<div class="table-box">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Task name</th>
        <th>Task details</th>
        <th>Date</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-group-divider">
      <% @urgents.each do |urgent| %>
        <tr>
          <td><%= urgent.task_name %></td>
          <td><%= urgent.task_details %></td>
          <td><%= urgent.date %></td>
          <td><%= urgent.category.category_title %></td>
          <td class="align-center">
            <%= link_to ' Show', urgent, class:"btn btn-info bi-eye-fill space" %>
            <%= link_to ' Edit', edit_task_path(urgent), class:"btn btn-success bi-pencil-fill space" %>
            <%= link_to ' Destroy', urgent, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger bi-trash-fill space" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>